#!/bin/sh

if [ $UID = 0 ]; then
cat << EOF

This script must not be run as root.

EOF
  exit 1
fi

cd
wget -N https://raw.githubusercontent.com/ryanpcmcquen/config-o-matic/stable/.slackConfig%24.sh -P ~/
sh ~/.slackConfig\$.sh

## my ssh key
cd
if [ ! -d ~/.ssh/ ]; then
  git clone https://ryanpcmcquen@bitbucket.org/ryanpcmcquen/.ssh.git
  chmod 700 .ssh/
  chmod 400 .ssh/*
  chmod 444 .ssh/id_rsa.pub
  chmod 444 .ssh/known_hosts
fi

## irssi!
wget -N https://raw.githubusercontent.com/ryanpcmcquen/linuxTweaks/master/irssi/config -P ~/.irssi/
wget -N https://raw.githubusercontent.com/ryanpcmcquen/linuxTweaks/master/irssi/default.theme -P ~/.irssi/

echo
echo "                    ..- - . "
echo "                   '        '. "
echo "                  '.- .  .--. . "
echo "                 |: _ | :  _ :| "
echo "                 |'(@)--'.(@) | "
echo "                 : .'     '-, : "
echo "                 :(_____.-'.' ' "
echo "                 : '-.__.-'   : "
echo "                 '  _.    _.   . "
echo "                /  /  '_ '  \    . "
echo "               .  :          \\   \ "
echo "              .  : _      __  .\   . "
echo "             .  /             : '.  \ "
echo "            :  /      '        : '.  . "
echo "           '  '      :          : :  '. "
echo "         .'_ :       :          / '   | "
echo "         :' \ .      :           '__  : "
echo "      .--'   \'-._    .      .' :    '). "
echo "    ..|       \   )          :   '._.'  : "
echo "   ;           \-'.        ..:         / "
echo "   '.           \  - ....-   |        ' "
echo "      -.         :   _____   |      .' "
echo "        ' -.    .'--       --'.   .' "
echo "            '--                -- "
echo

